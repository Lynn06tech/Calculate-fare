#include <stdio.h>

double convertToCelsius(double fahrenheit);

// The main function to test the conversion
int main() {
    double tempFahrenheit = 68.0; // Example: 68 degrees Fahrenheit

    // Call the function to get the temperature in Celsius
    double tempCelsius = convertToCelsius(tempFahrenheit);

    printf("Temperature in Fahrenheit: %.2f\n", tempFahrenheit);
    printf("Temperature in Celsius: %.2f\n", tempCelsius);

    return 0;
}

double convertToCelsius(double fahrenheit) {
    // Formula: C = (F - 32) * (5/9)
    // We use 5.0 / 9.0 to ensure floating-point division, not integer division.
    double celsius = (fahrenheit - 32.0) * (5.0 / 9.0);
    return celsius;
}
